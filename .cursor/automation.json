{
  "backgroundTasks": {
    "enabled": true,
    "tasks": [
      {
        "name": "performance-monitor",
        "description": "Monitor Core Web Vitals and performance metrics",
        "schedule": "*/5 * * * *",
        "enabled": true,
        "actions": [
          "run-lighthouse-audit",
          "check-bundle-size",
          "validate-seo-metadata",
          "test-accessibility"
        ]
      },
      {
        "name": "code-quality-check",
        "description": "Continuous code quality monitoring",
        "schedule": "0 */6 * * *",
        "enabled": true,
        "actions": [
          "run-eslint",
          "check-typescript-errors",
          "run-tests",
          "check-security-vulnerabilities"
        ]
      },
      {
        "name": "real-estate-data-sync",
        "description": "Sync property data and market information",
        "schedule": "0 2 * * *",
        "enabled": true,
        "actions": [
          "sync-property-listings",
          "update-market-data",
          "refresh-neighborhood-info",
          "validate-property-images"
        ]
      },
      {
        "name": "seo-optimization",
        "description": "SEO monitoring and optimization",
        "schedule": "0 4 * * *",
        "enabled": true,
        "actions": [
          "check-sitemap-validity",
          "validate-structured-data",
          "monitor-search-rankings",
          "check-meta-tags"
        ]
      }
    ]
  },
  "monitoring": {
    "enabled": true,
    "metrics": {
      "performance": {
        "lcp": { "threshold": 2.5, "unit": "seconds" },
        "fid": { "threshold": 100, "unit": "milliseconds" },
        "cls": { "threshold": 0.1, "unit": "score" },
        "inp": { "threshold": 200, "unit": "milliseconds" }
      },
      "bundle": {
        "maxSize": 500000, "unit": "bytes",
        "chunkSize": 250000, "unit": "bytes"
      },
      "accessibility": {
        "minScore": 0.9,
        "criticalIssues": 0
      },
      "seo": {
        "minScore": 0.85,
        "requiredMetaTags": ["title", "description", "keywords"]
      }
    },
    "alerts": {
      "performance": {
        "enabled": true,
        "channels": ["console", "file"],
        "thresholds": {
          "lcp": 3.0,
          "fid": 150,
          "cls": 0.15
        }
      },
      "errors": {
        "enabled": true,
        "channels": ["console", "file"],
        "maxErrors": 5
      }
    }
  },
  "automation": {
    "autoFix": {
      "enabled": true,
      "rules": [
        {
          "name": "auto-fix-eslint",
          "description": "Automatically fix ESLint errors",
          "conditions": ["eslint-errors"],
          "actions": ["fix-eslint", "commit-changes"]
        },
        {
          "name": "optimize-images",
          "description": "Automatically optimize new images",
          "conditions": ["new-images"],
          "actions": ["compress-images", "generate-webp", "update-references"]
        },
        {
          "name": "update-dependencies",
          "description": "Update outdated dependencies",
          "conditions": ["outdated-deps"],
          "actions": ["check-compatibility", "update-safe-deps", "run-tests"]
        }
      ]
    },
    "deployment": {
      "enabled": true,
      "triggers": ["main-branch", "release-tags"],
      "preDeployment": [
        "run-tests",
        "build-application",
        "check-performance",
        "validate-seo"
      ],
      "postDeployment": [
        "run-smoke-tests",
        "check-core-web-vitals",
        "verify-seo",
        "notify-team"
      ]
    }
  },
  "realEstateSpecific": {
    "propertyDataValidation": {
      "enabled": true,
      "checks": [
        "validate-property-images",
        "check-listing-completeness",
        "verify-price-accuracy",
        "validate-location-data"
      ]
    },
    "marketAnalysis": {
      "enabled": true,
      "schedule": "0 1 * * *",
      "actions": [
        "update-market-trends",
        "analyze-price-changes",
        "update-neighborhood-stats",
        "refresh-investment-metrics"
      ]
    },
    "leadGeneration": {
      "enabled": true,
      "monitoring": [
        "track-form-submissions",
        "monitor-cta-clicks",
        "analyze-conversion-rates",
        "optimize-lead-capture"
      ]
    }
  },
  "notifications": {
    "enabled": true,
    "channels": {
      "console": { "level": "info" },
      "file": { "path": ".cursor/logs/automation.log", "level": "warn" },
      "email": { "enabled": false, "recipients": [] }
    }
  }
}
